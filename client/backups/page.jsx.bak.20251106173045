'use client';

import React, { useEffect, useState } from 'react';
import axios from 'axios';

const API_BASE = process.env.NEXT_PUBLIC_API_BASE || '';

function Badge({ state }) {
  const base = 'inline-flex items-center text-xs font-semibold px-2 py-0.5 rounded-full';
  if (state === 'open') return <span className={`${base} bg-green-100 text-green-800`}>Open</span>;
  if (state === 'closed') return <span className={`${base} bg-gray-200 text-gray-700`}>Closed</span>;
  if (state === 'paid') return <span className={`${base} bg-blue-100 text-blue-800`}>Paid</span>;
  return <span className={`${base} bg-yellow-100 text-yellow-800`}>Unpaid</span>;
}

export default function AdminPage() {
  const [adminKey, setAdminKey] = useState('BattleHub2025Secret!');
  const [summary, setSummary] = useState(null);
  const [matches, setMatches] = useState([]);
  const [unpaid, setUnpaid] = useState([]);
  const [loading, setLoading] = useState(false);
  const [actionMsg, setActionMsg] = useState('');

  const api = axios.create({
    baseURL: API_BASE,
    headers: { 'x-admin-key': adminKey },
    timeout: 20000,
  });

  useEffect(() => { loadData(); }, []);

  async function loadData() {
    setLoading(true);
    setActionMsg('');
    try {
      const [sumRes, matchesRes, unpaidRes] = await Promise.allSettled([
        api.get('/admin/summary'),
        api.get('/admin/matches'),
        api.get('/admin/unpaid-matches'),
      ]);
      if (sumRes.status === 'fulfilled') setSummary(sumRes.value.data);
      if (matchesRes.status === 'fulfilled') setMatches(Array.isArray(matchesRes.value.data) ? matchesRes.value.data : []);
      if (unpaidRes.status === 'fulfilled') setUnpaid(Array.isArray(unpaidRes.value.data) ? unpaidRes.value.data : []);
    } catch (err) {
      console.error('loadData error', err && err.toString());
      setActionMsg('Error loading data (see console).');
    } finally {
      setLoading(false);
    }
  }

  const fmtUSD = (v) => (typeof v === 'number' ? `$${v.toFixed(2)}` : '-');
  const fmtDate = (d) => (d ? new Date(d).toLocaleString() : '-');

  function getWinnerName(m) {
    try {
      const w = m.entries?.find(e => String(e._id) === String(m.winnerEntry));
      return w?.user?.name || '—';
    } catch (e) { return '—'; }
  }

  async function runMatchmakingForMatch(matchId) {
    setActionMsg('Running matchmaking...');
    try {
      await api.post(`/admin/matches/${matchId}/run-matchmaking`);
      setActionMsg('Matchmaking command sent (check server logs).');
      await loadData();
    } catch (err) {
      console.error('runMatchmakingForMatch error', err && err.toString());
      setActionMsg('Run matchmaking failed (see console).');
    }
  }

  async function payoutMatch(matchId) {
    setActionMsg('Payout in progress...');
    try {
      await api.post(`/admin/matches/${matchId}/payout`);
      setActionMsg('Payout requested.');
      await loadData();
    } catch (err) {
      console.error('payoutMatch error', err && err.toString());
      setActionMsg('Payout failed (see console).');
    }
  }

  async function runMatchmakingAll() {
    setActionMsg('Running matchmaking (all) ...');
    try {
      await api.post('/admin/run-matchmaking');
      setActionMsg('Run matchmaking (all) requested.');
      await loadData();
    } catch (err) {
      console.error('runMatchmakingAll error', err && err.toString());
      setActionMsg('Run matchmaking failed (see console).');
    }
  }

  async function batchPayout() {
    setActionMsg('Batch payout requested...');
    try {
      await api.post('/admin/batch-payout');
      setActionMsg('Batch payout requested.');
      await loadData();
    } catch (err) {
      console.error('batchPayout error', err && err.toString());
      setActionMsg('Batch payout failed (see console).');
    }
  }

  return (
    <main className="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100 p-6">
      <div className="max-w-6xl mx-auto space-y-8">
        <header className="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
          <div>
            <h1 className="text-3xl font-bold text-gray-900">BattleHub — Admin</h1>
            <p className="text-gray-600 mt-1">Quick admin overview: summary & stats</p>
          </div>

          <div className="flex items-center gap-2">
            <input
              value={adminKey}
              onChange={(e) => setAdminKey(e.target.value)}
              className="border px-3 py-2 rounded-md text-sm w-64"
            />
            <button onClick={loadData} className="px-3 py-2 rounded-md bg-gray-800 text-white text-sm hover:bg-gray-700">Refresh</button>
            <button onClick={runMatchmakingAll} className="px-3 py-2 rounded-md bg-indigo-600 text-white text-sm hover:bg-indigo-500">Run Matchmaking</button>
            <button onClick={batchPayout} className="px-3 py-2 rounded-md bg-blue-600 text-white text-sm hover:bg-blue-500">Batch Payout</button>
          </div>
        </header>

        <section className="grid grid-cols-1 sm:grid-cols-3 gap-6">
          <div className="bg-white p-6 rounded-2xl shadow-sm hover:shadow-md transition">
            <div className="text-sm text-gray-500">Total Users</div>
            <div className="text-2xl font-bold text-gray-900 mt-3">{summary?.totalUsers ?? '-'}</div>
          </div>
          <div className="bg-white p-6 rounded-2xl shadow-sm hover:shadow-md transition">
            <div className="text-sm text-gray-500">Platform Revenue (USD)</div>
            <div className="text-2xl font-bold text-gray-900 mt-3">{fmtUSD(summary?.platformRevenueUSD || 0)}</div>
          </div>
          <div className="bg-white p-6 rounded-2xl shadow-sm hover:shadow-md transition">
            <div className="text-sm text-gray-500">Total Payouts (USD)</div>
            <div className="text-2xl font-bold text-gray-900 mt-3">{fmtUSD(summary?.totalPayoutsUSD || summary?.totalPayouts || 0)}</div>
          </div>
        </section>

        <section>
          <h2 className="text-xl font-semibold text-gray-900 mb-3">Unpaid Matches</h2>
          <div className="bg-white rounded-2xl p-4 shadow-sm">
            {unpaid?.length > 0 ? unpaid.map(m => (
              <div key={m._id} className="flex items-center justify-between py-3 border-b last:border-0">
                <div>
                  <div className="font-semibold text-gray-800">{m.battle?.title ?? '—'}</div>
                  <div className="text-sm text-gray-500">Pot: {fmtUSD(m.potUSD)} • Created: {fmtDate(m.createdAt)}</div>
                </div>
                <div className="flex items-center gap-2">
                  <Badge state="unpaid" />
                  <button onClick={() => payoutMatch(m._id)} className="px-3 py-1 rounded-md bg-blue-600 text-white text-sm hover:bg-blue-500">Payout</button>
                </div>
              </div>
            )) : (
              <p className="text-gray-600">No unpaid matches</p>
            )}
          </div>
        </section>

        <section>
          <h2 className="text-2xl font-semibold text-gray-900 mb-4">Recent Matches</h2>
          <div className="space-y-4">
            {matches.map(m => (
              <article key={m._id} className="bg-white rounded-2xl p-6 shadow-sm hover:shadow-md transition">
                <div className="flex items-start justify-between gap-4">
                  <div className="flex-1">
                    <div className="flex items-center gap-3">
                      <h3 className="text-lg font-semibold text-gray-800">{m.battle?.title ?? '—'}</h3>
                      <span className="text-sm text-gray-500">· {m.battle?.sport ?? ''}</span>
                      <Badge state={m.paid ? 'paid' : (m.battle?.state || 'closed')} />
                    </div>
                    <p className="text-sm text-gray-500 mt-2">Pot: {fmtUSD(m.potUSD)} • Created: {fmtDate(m.createdAt)}</p>

                    <div className="mt-4 grid grid-cols-1 sm:grid-cols-3 gap-2">
                      <div>
                        <div className="text-xs text-gray-500">Winner</div>
                        <div className="text-sm font-medium text-gray-800 mt-1">{getWinnerName(m)}</div>
                      </div>
                      <div>
                        <div className="text-xs text-gray-500">Winner Payout</div>
                        <div className="text-sm font-medium text-gray-800 mt-1">{fmtUSD(m.winnerPayoutUSD)}</div>
                      </div>
                      <div>
                        <div className="text-xs text-gray-500">Platform Cut</div>
                        <div className="text-sm font-medium text-gray-800 mt-1">{fmtUSD(m.platformCutUSD)}</div>
                      </div>
                    </div>
                  </div>

                  <div className="flex flex-col items-end gap-3">
                    <div className="text-sm text-gray-500">Paid: <span className="font-medium text-gray-800">{m.paid ? 'Yes' : 'No'}</span></div>

                    <div className="flex flex-col sm:flex-row gap-2">
                      <button
                        onClick={() => runMatchmakingForMatch(m._id)}
                        className="px-3 py-2 rounded-md bg-gray-50 border text-sm hover:bg-gray-100"
                      >
                        Run Matchmaking
                      </button>

                      <button
                        onClick={() => payoutMatch(m._id)}
                        disabled={m.paid}
                        className={`px-3 py-2 rounded-md text-sm ${m.paid ? 'bg-gray-200 text-gray-600' : 'bg-blue-600 text-white hover:bg-blue-500'}`}
                      >
                        {m.paid ? 'Paid' : 'Payout'}
                      </button>

                      <button
                        onClick={() => { console.log(m); setActionMsg('Printed match JSON to console.'); }}
                        className="px-3 py-2 rounded-md bg-gray-100 border text-sm hover:bg-gray-200"
                      >
                        View JSON
                      </button>
                    </div>
                  </div>
                </div>
              </article>
            ))}
            {matches.length === 0 && (
              <div className="bg-white p-6 rounded-2xl shadow-sm text-gray-600">No matches found.</div>
            )}
          </div>
        </section>

        {actionMsg && <div className="rounded-md bg-yellow-50 border-l-4 border-yellow-400 p-3 text-yellow-800">{actionMsg}</div>}
      </div>
    </main>
  );
}
